{
  "name": "@charliewilco/gluejar",
  "version": "1.0.0",
  "description": "Paste images from your clipboard",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": "charliewilco/react-gluejar",
  "author": "Charles âš¡ <charlespeters42@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "esbuild": "^0.12.15",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "serve": "^12.0.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.2"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "yarn build",
    "example": "vite example --config example/vite.config.js",
    "prebuild": "rm -rf dist",
    "build": "node ./scripts/build",
    "postbuild": "tsc --declaration --emitDeclarationOnly",
    "vercel-start": "serve -s public",
    "vercel-build": "vite build example --outDir ../public --config example/vite.config.js"
  },
  "lint-staged": {
    "*.{tsx,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 95,
    "singleQuote": false,
    "semi": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  }
}
